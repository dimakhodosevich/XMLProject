<?xml version="1.0" encoding="UTF-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="root" type="rootType"/>

  <xs:complexType name="countryType">

    <xs:sequence>

      <xs:element name="name">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="Belarus"/>
            <xs:enumeration value="Ukraine"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>

      <xs:element name="capital">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="Minsk"/>
            <xs:enumeration value="Kiev"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>

      <xs:element name="description">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="Belarus is..."/>
            <xs:enumeration value="Ukraine is..."/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>

    </xs:sequence>

    <xs:attribute type="xs:string" name="countyCode" use="required"/>
  </xs:complexType>

  <xs:complexType name="rootType">
    <xs:sequence>
      <xs:element type="countryType" name="country" maxOccurs="unbounded" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>